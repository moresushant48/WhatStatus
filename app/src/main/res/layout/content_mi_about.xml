<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:layout_weight="1"
    tools:context=".miAbout"
    tools:showIn="@layout/activity_mi_about">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/white"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:src="@drawable/avatar"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/holo_red_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="5dp">

        <TextView
            android:id="@+id/devloper_name"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/devloper_name"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/devloper_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/devloper_username"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_below="@id/devloper_name"
            style="@style/TextAppearance.AppCompat.Title"/>

        <ImageView
            android:id="@+id/imgGit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/git"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/devloper_username"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:padding="15dp"
        android:background="@android:color/transparent"
        android:text="@string/purpose"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

</LinearLayout>